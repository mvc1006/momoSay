	mui.plusReady(function(){
		
		var access_token = window.localStorage.getItem('access_token');
		mui.ajax({
			url:'http://www.internet-web.cn/Vip/VipList',
			type:'GET',
			dataType:'json',
			data:{access_token:access_token},
			success:function(data){
				
				var userData = data.data.user;
					var UserId = userData.UserId;
					var UserPhone = userData.UserPhone;
					var UserSex = userData.UserSex;
					var UserAvatar = userData.UserAvatar;
					var NickName = userData.NickName;
					var IsVip = userData.IsVip;
					
				document.getElementById('UserAvatar').setAttribute('src',UserAvatar);
				document.getElementById('NickName').innerText = NickName;
				if(IsVip==0){
					document.getElementById('IsVip').innerText = '您暂且不是是会员';
				}else{
					document.getElementById('IsVip').innerText = '您已经是会员';
				}
				
				
				
				
				//卡类型
				var productList = data.data.productList;
				
//				alert(productList.length);
				for(var i =0;i<productList.length;i++) {
					
					var ID  = productList[i].ID;
					var Name  = productList[i].Name;
					var OldPrice  = productList[i].OldPrice;
					var NewPrice  = productList[i].NewPrice;
					var Days  = productList[i].Days;
					var Remark  = productList[i].Remark;
					
					var DftSelect  = productList[i].DftSelect;
					
					
					var card =
						'<div class="yearCard">'+
							'<label for="year">'+
								'<ul>'+
									'<li>'+
										'<span>'+Name+'</span>'+
										'<span>'+Remark+'</span>'+
									'</li>'+
									'<li>'+
										'<span>'+'￥'+NewPrice+'.00'+'</span>'+
										'<span>'+'￥'+OldPrice+'</span>'+
									'</li>'+
									'<li>'+
										'<input id="year" type="radio" checked="checked" name="vip" value="'+NewPrice+'"/>'+
									'</li>'+
								'</ul>'+
							'</label>'+
							
						'</div>';
							
							
						$('#setMeal').append(card);
					
				};	
				
				
		
					
			}
		});
		
		
	})
	
	
	
		
</script>