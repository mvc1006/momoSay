.mui-bar-nav{
    position: absolute;
    max-width: 1080px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 5px 13px 0px  13px;
    
    background: salmon;
    background: transparent;
                border:none;
//              position: static;
                box-shadow:none;
    
    p{
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background: rgba(0,0,0,.5);
        
        display: flex;
        align-items: center;
        justify-content: center;
        
        a{
            color: #FFFFFF;
            font-weight:200;
        }
        i{
           color: #FFFFFF; 
           font-size: 20px;
           font-weight:600;
        }
    }
}

.mui-content{
    
    
max-width: 1080px;
margin: 0 auto;
//
.banner{
      width: 100%;
      height: 200px;
      img{
          width: 100%;
          height: 100%;
          display: block;
          margin: 0 auto;
      }
}



.top{
    width: 100%;
    height: auto;
    background: white;
    padding: 15px 15px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-between;
    line-height: 30px;
    p{
       font-size: 14px;
      
    }
    
    .title{
        color: #333333;
         font-size: 16px;
         font-weight: 900;
    }
    
    .littleDes{
        color: #666666;
    }
    ul{
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        color: #666666;
        font-size: 12px;
    }
}

.slider{
    width: 100%;
    height: 500px;
    background: white;
    margin: 15px auto;
}


.detailsClass{
    width: 95%;
    height: 95px;
//  background: #fdfafc;
    margin: 10px auto;
    border-radius: 5px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    
    .img{
        width: 80px;
        height: 80px;
        
        img{
            width: 100%;
            height: 100%;
            border-radius: 3px;
        }
    }
    .right{
        
        height: 80px;
//      background: darkcyan;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: space-around;
        p{
            font-size: 14px;
        }
        
        ul{
            width: 205px;
//          background: darkgoldenrod;
            display: flex;
            align-items: center;
            justify-content: space-between;
            color: #999999;
            font-size: 14px;
            li{
               font-size: 13px; 
            }
            li:last-child{
                color: #e281c2;
            }
        }
    }
}


}
