html {
  background: #f0eff4; }

.box {
  width: 95%;
  background: #fdfafc;
  border-radius: 5px;
  padding: 0px 3px;
  padding-bottom: 15px;
  margin: 20px auto; }
  .box .grid {
    width: 95%;
    height: auto;
    padding-bottom: 10px;
    margin: 0 auto; }
    .box .grid div {
      width: 100%;
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin-bottom: 6px; }
      .box .grid div div {
        width: 45%;
        height: 180px;
        position: relative; }
        .box .grid div div img {
          width: 100%;
          height: 100%;
          border-radius: 5px; }
        .box .grid div div p {
          position: absolute;
          bottom: -10px;
          right: 0px;
          width: 100%;
          height: 30px;
          background: linear-gradient(to right, rgba(0, 0, 0, 0.2), transparent, transparent);
          display: flex;
          align-items: center;
          justify-content: space-between;
          padding: 0 5px; }
          .box .grid div div p span {
            color: #FFFFFF;
            font-size: 12px; }
          .box .grid div div p img {
            width: 30px;
            height: 30px;
            margin-bottom: 10px; }
