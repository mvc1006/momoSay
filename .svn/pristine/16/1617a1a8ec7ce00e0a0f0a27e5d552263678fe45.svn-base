<script>
	
	mui.plusReady(function(){
		
		var access_token = localStorage.getItem("access_token");//取回students变量
		mui.ajax({
			url      : 'http://www.internet-web.cn/Images/ImageMain',
            type     : 'GET',
            data:{access_token:access_token},
			success:function(data){
				data = JSON.parse(data);
				
				
				
				
				var listBanner = data.data.listBanner[0].ImgUrl;
				var listMsg = data.data.listMsg[0].Msg;
//				mui.toast(listMsg);
				document.getElementById('listBanner').setAttribute('src',listBanner);
				document.getElementById('listMsg').innerText = listMsg;
				
				var listCate = data.data.listCate;
				
				for(var i =0;i<listCate.length;i++){
					
					
					var  idd = listCate[i].ID;				
					var Name = listCate[i].Name;
					var Url = listCate[i].Url;
					var IsLock = listCate[i].IsLock;
					
					var html =
					'<div id="fruits'+i+'" class="fruits">'+
						'<input id="input1" type="text" value="'+Name+'" hidden>'+
						'<input id="input2" type="text" value="'+idd+'" hidden>'+
						'<input id="IsLock" type="text" value="'+IsLock+'" hidden>'+
						'<img id="suo" class="suo" src="./images/suo.png" alt="" /  style="display:none;">'+
						'<span>'+Name+'</span>'+
						'<div>'+
								'<img id="img" src="'+Url+'" alt="" />'+
						'</div>'+
					'</div>'

					
//					document.getElementById('kind').innerHTML = html;
					
					$('#kind').append(html);
					
					if($('#fruits'+i+'').find('#IsLock').val()==1){
						
						$('#fruits'+i+'').find('#img').css({'opacity':'.2'});
						$('#fruits'+i+'').find('#suo').css({'display':'block'});
						
										
						}
					
					

						
					document.getElementById('fruits'+i+'').addEventListener('tap',function(){
						var name = $(this).find('#input1').val();
						var cateId = $(this).find('#input2').val();
						var IsLock = $(this).find('#IsLock').val();

						if(IsLock==1){
							mui.toast('开通会员享受更多学习乐趣~');

//							var src = $(this).find('#img').attr('src',''); 
//							mui.toast(src);
							document.getElementById('fruits'+i+'').off();
							
						}
//							mui.toast(IsLock)
							mui.openWindow({
								url:'subpages/articleDetail11.html',
								extras:{'name':name,'cateId':cateId}
								
							
							})
					})
					
					
					


					
				}
			}
		})
	})
</script>

