				preloadPages:[{
				  'url':'login.html',
				  'id':'login.html',
					    }],
				
				})
		</script>
		
		<nav class="mui-bar mui-bar-tab">
		    <a id="index" class="mui-tab-item mui-active " href="shouye1.html">
		        <span class="mui-icon iconfont icon-shouye1"></span>
		        <span class="mui-tab-label">首页</span>
		    </a>
		    <a id="study" class="mui-tab-item " href="study.html">
		        <span class="mui-icon iconfont icon-xuexi1"></span>
