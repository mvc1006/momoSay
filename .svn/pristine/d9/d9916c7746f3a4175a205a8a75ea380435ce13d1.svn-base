.mui-bar{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.wrap{
//  max-width:1080px;
    /*height: 300px;*/
    margin: 0 auto;
    padding-top: 1px;
    background: #FFFFFF;
    padding-bottom: 30px;
    font-size: 16px;
    color: #666666;
        
    .mui-slider{
        width: 95%;
        height: 160px;
        border-radius: 5px;
        margin: 20px auto;
//      background: #f85415;
        
        .mui-slider-item{
             height: 160px;
             img{
                 width: 100%;
                height: 100%;
            }
        }
           
        
          
    }
    
    
    .reminder{
        width: 95%;
        height: 50px;
        background: #F3F5F7;
        background: #fdfafc;
        padding: 15px 10px;
        border-radius: 2px;
        margin: 0 auto;
        i{
            font-weight: 600;
            color: #DD524D;
            padding-right: 10px;
        }
    }
    
    
    .kind{
        width: 95%;
        height: auto;
        margin: 20px auto;
//      background: wheat;
//background: #fdfafc;
        border-radius: 10px;
        
        .fruits{
            width: 100%;
            height: 150px;
            padding: 10px;
//          padding-bottom: 50px;
            margin: 0 auto;
            margin-bottom: 20px;
            padding-bottom: 150px;
             background: #F3F5F7;
             background: #fdfafc;
            border-radius: 5px;
            span{
                color: #999999;
            }
            div{
                width: 95%;
                height: 100px;
                
                background: rgba(0,0,0,.7);
                border-radius: 10px;
                margin: 0 auto;
                margin-top: 10px;
                
                
                img{
                    width: 100%;
                    height: 100%;
                    border-radius: 5px;
                }
            }
        }
    }
}